datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  email     String   @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  songs     Song[]
  updatedAt DateTime @updatedAt
  upvotes   Upvote[]
  username  String   @unique
}

model Song {
  category    Category[]
  createdAt   DateTime   @default(now())
  description String?
  id          String     @id @default(cuid())
  name        String
  updatedAt   DateTime   @updatedAt
  upvotes     Upvote[]
  url         String?
  user        User       @relation(fields: [userId], references: [id])
  userId      String
}

model Category {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String   @unique
  songs     Song[]
  updatedAt DateTime @updatedAt
}

model Upvote {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  song      Song     @relation(fields: [songId], references: [id])
  songId    String
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}